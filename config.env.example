# ===== REQUIRED CONFIGURATION =====

# Discord Bot Token (from https://discord.com/developers/applications)
DISCORD_TOKEN=your_token_here

# Discord Guild (Server) ID
DISCORD_GUILD_ID=123456789

# Main Discord Channel ID (for bot messages)
DISCORD_CHANNEL_ID=123456789

# Log Channel ID (for error/warning messages)
DISCORD_LOG_CHANNEL_ID=123456789

# Moderator Role ID (for admin commands)
DISCORD_MODERATOR_ROLE_ID=123456789

# OpenAI API Key (from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-...


# ===== OPTIONAL CONFIGURATION =====

# Logging
LOG_LEVEL=INFO                    # Options: DEBUG, INFO, WARNING, ERROR
DEBUG_MODE=false                  # Enable debug features
ENABLE_DEBUG_LOG=false            # Enable persistent debug log file (see DEBUG_LOGGING.md)
DEBUG_LOG_DAYS=30                 # Days of debug logs to keep (if enabled)

# API Configuration
SKIP_API_VALIDATION=false         # Skip OpenAI API key validation on startup

# TTS Configuration
MAX_TTS_CACHE=50                  # Max TTS files to cache
TTS_TIMEOUT=15                    # TTS generation timeout (seconds)
TTS_ROLE_ID=                      # Optional: Role required for TTS commands

# Voice Configuration
VOICE_TIMEOUT=10                  # Voice connection timeout (seconds)
AUTO_DISCONNECT_TIMEOUT=300       # Auto-disconnect after inactivity (seconds)

# Rate Limiting
RATE_LIMIT_REQUESTS=15            # Max requests per window
RATE_LIMIT_WINDOW=60              # Rate limit window (seconds)

# Queue Management
MAX_QUEUE_SIZE=50                 # Max items in processing queue
